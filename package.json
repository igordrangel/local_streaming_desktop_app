{
  "name": "local_streaming_desktop_app",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "author": "Igor D. Rangel",
  "license": "ISC",
  "scripts": {
    "start": "npm run compile && cd public && ng build --base-href ./ && cd ../ && electron .",
    "compile": "tsc",
    "build": "npm run compile && cd public && ng build --prod && cd ../",
    "setup": "rmdir dist /q /s && npm run build && electron-builder && publish.bat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igordrangel/local_streaming_desktop_app.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/igordrangel/local_streaming_desktop_app/issues"
  },
  "homepage": "https://github.com/igordrangel/local_streaming_desktop_app#readme",
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "https://local-streaming.igordrangel.com.br"
      }
    ],
    "appId": "br.com.igordrangel.local-streaming",
    "productName": "Local Streaming",
    "copyright": "Copyright Â© 2020 Igor D. Rangel",
    "compression": "maximum",
    "directories": {
      "app": ".",
      "buildResources": "./resources",
      "output": "dist/setup"
    },
    "files": [
      "**/*",
      "./resources/icons/icon.*",
      "!public${/*}",
      "!server${/*}",
      "!wwwroot${/*}"
    ],
    "nsis": {
      "perMachine": true
    },
    "asar": false
  },
  "dependencies": {
    "consign": "^0.1.6",
    "cors": "^2.8.5",
    "electron-progressbar": "^1.2.0",
    "electron-updater": "^4.3.5",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "electron": "^10.1.5",
    "electron-builder": "^22.7.0",
    "http-server": "^0.12.3",
    "ts-node": "^9.0.0"
  }
}
